@model IEnumerable<Movies.Web.DTO.FilmDTO>
@{
    ViewBag.Title = "Films Page";
}

<div style="margin-top:25px"></div>

<table class="table table-striped table-responsive">
    <thead>
    <tr>
        <th>Title</th>
        <th>Year</th>
        <th>Director</th>
    </tr>
    </thead>

    <tbody>
    @foreach (var f in Model)
    {
        <tr>
            <td>@f.Title</td>
            <td>@f.ReleaseYear</td>
            <td>@f.Director</td>
        </tr>    
    }
    </tbody>
</table>
